@import 'variables.styl'
// settings

fieldset
  padding 0
  font-size 1em
  padding-left 1em
  border none
  label
    padding 0
    padding-left 0.5em
    background site_color
    @media (min-width: 1013px)
      width 45%
    color site_background
    display inline-block
    span
      position relative
      top 0.5em
    &.valid
      background color_green
      input
        border-color color_green
    &.invalid
      background color_red
      input
        border-color color_red
  input
    float right
    margin 0
    padding 0.5em
    font-size 1em
    border solid 2px site_color
    color site_color
  small
    font-size 0.8em
    i
      padding-left 0.5em
