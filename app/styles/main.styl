body
  font-family: 'Open Sans', sans-serif

h1
  color darkblue

.game-list
  display flex
  flex-direction row
  flex-wrap wrap

.game-container
  list-style none
  width	8em
  height 4em
  background tomato
  margin 0.275em
  border-radius 0.3em
  cursor pointer
  padding 0.2em
  &:hover
    background lightblue
  
  .game-team-line
  	margin 0.3em
  	margin-top 0.4em
  	padding 0
  	font-size 0.8em
  	
  	.score
  	  float right
  
  .status
  	font-size 0.6em
  	.live
  	  // float left
  	  background green
  	  color white
  	  padding-left 0.8em
  	  padding-right 0.8em
  	.statusDesc
  	  float right