site_color = #005685
site_background = #f5e7c9
green = #32d99c
site_font = 'Open Sans', sans-serif

body
  font-family site_font
  padding 0
  margin 0
  background site_background
  color site_color

// navigation

h1
  color #baffff
  display inline

header
  background #005685
  padding 0.5em
nav
  display inline
  .navigation
    display inline
    li
    a
      display inline
      margin 0.5em
      color #5cafdb
      position relative
      cursor pointer
      text-decoration none
      .line
        background #8cdeff
        display inline-block
        position absolute
        top 1.3em
        left 0
        width 0
        height 0.1em
        transition all 0.3s ease-out
      &:hover
        color #8cdeff
        text-decoration none
        .line
          width 100%

.my-players-container
  margin-top 2em
  .notify-player-list
    width 100%
    display table
    .remove
      padding 1em
      padding-left 0.5em
      .remove-icon
        visibility hidden
    .player
      .name
        padding-left 0
      &:hover
        background site_color
        color site_background
        .remove
          color inherit
          .remove-icon
            visibility visible
          &:hover
            color #8cdeff
    .name
      .position
        font-size 0.6em
        position relative
        top -0.4em
    .controls
      text-align right

// content

.content
  padding 0.5em
  height auto
  display block

// calendar

.calendar-container
  .button-container
    width 100%
    margin-top 1em
    .go-today
      margin auto
      display block
      padding 0.5em
      width 8%
      background site_background
      border none
      border-top solid 1px site_color
      border-bottom solid 1px site_color
      font-family site_font
      color site_color
      font-size 0.8em
      &:active
        border-top-color #5cafdb
        border-bottom-color #5cafdb
        color #5cafdb
      &:disabled
        border-top-color #ccc
        border-bottom-color #ccc
        color #ccc
      &:focus
        outline 0
  .calendar
    list-style none
    display flex
    padding 0
    .backward
    .forward
      margin auto
      font-size 1.5em
      cursor pointer
      &:hover
        color green
    .date
      display inline
      margin 1em
      margin-top 0.5em
      width 100%
      padding 0.5em
      text-align center
      border-top solid 1px site_color
      border-bottom solid 1px site_color
      cursor pointer
      &.selected
      &:hover
        background site_color
        color site_background

// games list

.game-list-container
  position relative
  opacity 1
  transition all 0.4s
  .overlay
    display block
    position absolute
    left -0.5em
    width 101%
    height 100%
    opacity 0
    visibility hidden
  &.loading
    opacity 0.4
    .overlay
      opacity 1
      background rgba(0,0,0,0.3)
      visibility visible

h2
  margin 0

.game-list
  display flex
  flex-direction row
  flex-wrap wrap
  margin 0
  margin-top 1em
  margin-bottom 1em
  padding 0

// .selected

.game-container
  list-style none
  width	8em
  height 4em
  border-top solid 1px site_color
  border-bottom solid 1px site_color
  margin 0.275em
  cursor pointer
  padding 0.2em
  &.unavailable
  	cursor not-allowed
  &:hover
  &.selected
    background rgba(0,0,95, 0.1)

  .game-team-line
    margin 0.3em
    margin-top 0.4em
    padding 0
    font-size 0.8em
    &.winner
      font-weight bold
      background #004875
      color site_background

    .score
      float right

  .status
    font-size 0.6em
    .live
      background #32d99c
      color white
      padding-left 0.4em
      padding-right 0.4em
    .statusDesc
      float right

// boxscore

table
  font-family 'Droid Sans Mono', monospace
  font-size 0.8em
  border-spacing 0
  max-width 1023px
  text-align right
  color #6c6d6f
  margin auto
  display block
  .table-header, .name
    font-family 'Open Sans', sans-serif
  .name
    width 25%
    text-align left
    padding-left 2em
  .team-name
    background site_background
    color site_color
    text-align left

th
  background #6c6d6f
  padding 0.5em
  padding-right 2em
  color #fff
td
  padding 0.3em
  padding-right 2em
  margin 0
tr:nth-child(odd)
  background #d8e8e8
tr:nth-child(even)
  background #fff
tr
  cursor pointer
  &:hover
    background lightyellow
.notified
  background #e6b332 !important

.boxscore-container
  // display table
  margin auto

.boxscore
  margin 1em
  // max-width 1023px
  .starter
    &::after
      content '*'
  .on-court
    font-weight bold
    color #d93644
  .position
    font-size 0.7em
    position relative
    top -4px
  .dnp
    text-align center
  .totals
    background #ccc
    font-weight bold
  .team
    text-align center
    font-family 'Open Sans', sans-serif


// spinner

.spinner
  width 40px
  height 40px
  background-color site_color

  position absolute
  margin -20px auto
  top 50%
  left 50%
  -webkit-animation sk-rotateplane 1.2s infinite ease-in-out
  animation sk-rotateplane 1.2s infinite ease-in-out

@-webkit-keyframes sk-rotateplane {
  0% { -webkit-transform: perspective(120px) }
  50% { -webkit-transform: perspective(120px) rotateY(180deg) }
  100% { -webkit-transform: perspective(120px) rotateY(180deg)  rotateX(180deg) }
}

@keyframes sk-rotateplane {
  0% {
    transform: perspective(120px) rotateX(0deg) rotateY(0deg);
    -webkit-transform: perspective(120px) rotateX(0deg) rotateY(0deg)
  } 50% {
    transform: perspective(120px) rotateX(-180.1deg) rotateY(0deg);
    -webkit-transform: perspective(120px) rotateX(-180.1deg) rotateY(0deg)
  } 100% {
    transform: perspective(120px) rotateX(-180deg) rotateY(-179.9deg);
    -webkit-transform: perspective(120px) rotateX(-180deg) rotateY(-179.9deg);
  }
}
